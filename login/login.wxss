/**login.wxss**/

.container {
  background: linear-gradient(40deg,#70c051, #28c5f5);
  padding: 0;
}
.titlepic {
  display: flex;
  width: 100%;
  align-content: center;
}
.headname{
  display: flex;
  font-size: 24pt;
  color: rgb(0,0,0);
  padding-top: 5px;
  padding-bottom: 5px;
}
.helpname{
  display: flex;
  font-size: 10pt;
  color:rgb(0,0,0,0.4);
  padding-bottom: 15px;
}
.userauthinput{
  display: flex;
  background-color: #e6e4e4;
  min-height: 75rpx;
  font-size: 13pt;
  padding-left: 13pt;
  border-radius: 10px;
}
.userpininput{
  display: flex;
  background-color: #e6e4e4;
  min-height: 75rpx;
  font-size: 13pt;
  padding-left: 13pt;
  border-radius: 10px;
}
.section3{
  margin-bottom: 5px;
}
.loginbtn::after{
  border: none;
}
.loginbtn{
  border-radius: 10px;
  margin-top:15px;
  margin-bottom: 5px;
  height: 85rpx;
}
.card1{
  padding: 10px;
  margin : 15px;
  border-radius: 10px;
  background-color: #ffffff;
  box-shadow:0 6rpx 10rpx 2rpx rgba(0,0,0,0.3);/*for Android*/
  -webkit-box-shadow:0px 3px 5px 1px rgba(0,0,0,0.3);/*for IOS*/
}